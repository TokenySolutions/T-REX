{
  "name": "@tokenysolutions/t-rex",
  "version": "2.5.0",
  "description": "A fully compliant environment for the issuance and use of tokenized securities.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "build",
    "contracts",
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "truffle compile && truffle-flattener contracts/token/Token.sol > build/TokenFlat.sol && truffle-flattener contracts/registry/IdentityRegistry.sol > build/IdentityRegistryFlat.sol && truffle-flattener contracts/registry/ClaimTopicsRegistry.sol > build/ClaimTopicsRegistryFlat.sol && truffle-flattener contracts/registry/TrustedIssuersRegistry.sol > build/TrustedIssuersRegistryFlat.sol",
    "coverage": "solidity-coverage",
    "test": "solidity-coverage",
    "lint:js": "eslint \"test/*.js\"",
    "lint:js-fix": "eslint \"test/*.js\" --fix",
    "lint": "npm run lint:sol",
    "lint:sol": "solhint --max-warnings 6 \"contracts/**/*.sol\"",
    "docs": "solidity-docgen --solc-settings \"{remappings: ['openzeppelin-solidity=$PWD/node_modules/openzeppelin-solidity', '@onchain-id=$PWD/node_modules/@onchain-id']}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TokenySolutions/T-REX.git"
  },
  "author": "Tokeny Solutions",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/TokenySolutions/T-REX/issues"
  },
  "homepage": "https://github.com/TokenySolutions/T-REX#README",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@onchain-id/solidity": "^1.0.0-beta3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-security": "^1.4.0",
    "ethers": "^4.0.37",
    "ganache-cli": "^6.7.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "openzeppelin-solidity": "^3.0.0-beta.0",
    "prettier": "^1.19.1",
    "solhint": "^2.3.0",
    "solidity-coverage": "^0.6.5",
    "solidity-docgen": "^0.3.13",
    "truffle": "^5.1.13",
    "truffle-flattener": "^1.4.2",
    "web3": "^1.0.0-beta.55"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./scripts/commit-msg.js $HUSKY_GIT_PARAMS && commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  }
}
